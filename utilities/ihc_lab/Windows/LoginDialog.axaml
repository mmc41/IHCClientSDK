<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="450"
        x:Class="IhcLab.LoginDialog"
        Title="IHC Login Configuration"
        Width="500" Height="450"
        WindowStartupLocation="CenterOwner"
        CanResize="false">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- IHC Settings Section -->
        <Border Grid.Row="0"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                CornerRadius="5"
                Padding="15">
            <StackPanel>
                <TextBlock Text="IHC Settings"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>

                <!-- Endpoint (Required) -->
                <TextBlock Text="Endpoint: *" Margin="0,5,0,2"/>
                <TextBox Name="EndpointTextBox"
                         Watermark="http://192.168.1.10"
                         TextChanged="OnRequiredFieldChanged"
                         Margin="0,0,0,10"/>

                <!-- UserName (Required) -->
                <TextBlock Text="UserName: *" Margin="0,5,0,2"/>
                <TextBox Name="UserNameTextBox"
                         Watermark="Enter username"
                         TextChanged="OnRequiredFieldChanged"
                         Margin="0,0,0,10"/>

                <!-- Password (Required) -->
                <TextBlock Text="Password: *" Margin="0,5,0,2"/>
                <TextBox Name="PasswordTextBox"
                         PasswordChar="*"
                         Watermark="Enter password"
                         TextChanged="OnRequiredFieldChanged"
                         Margin="0,0,0,10"/>

                <!-- Application (Required) -->
                <TextBlock Text="Application: *" Margin="0,5,0,2"/>
                <ComboBox Name="ApplicationComboBox"
                          Margin="0,0,0,10"
                          SelectionChanged="OnRequiredFieldChanged"
                          SelectedIndex="0">
                    <ComboBoxItem Content="treeview"/>
                    <ComboBoxItem Content="openapi"/>
                    <ComboBoxItem Content="administrator"/>
                </ComboBox>

                <!-- LogSensitiveData -->
                <CheckBox Name="LogSensitiveDataCheckBox"
                          Content="Log Sensitive Data"
                          Margin="0,5,0,5"/>

                <!-- AllowDangerousInternTestCalls -->
                <CheckBox Name="AllowDangerousTestCallsCheckBox"
                          Content="Allow Dangerous Internal Test Calls"
                          Margin="0,5,0,5"/>
            </StackPanel>
        </Border>

        <!-- Validation Message -->
        <TextBlock Name="ValidationMessageTextBlock"
                   Grid.Row="1"
                   Foreground="Red"
                   TextWrapping="Wrap"
                   Margin="0,10,0,0"
                   VerticalAlignment="Top"
                   IsVisible="False"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Spacing="10">
            <Button Name="OkButton"
                    Content="OK"
                    Width="100"
                    Click="OnOkClick"/>
            <Button Name="CancelButton"
                    Content="Cancel"
                    Width="100"
                    Click="OnCancelClick"/>
        </StackPanel>
    </Grid>
</Window>
