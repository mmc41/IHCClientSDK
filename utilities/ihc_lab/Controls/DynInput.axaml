<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ihc_lab.DynInput">
    <Grid Name="inputsGrid">
      <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>          
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto"/>
          <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <TextBox Grid.Column="0" Grid.Row="0" Name="ParamDef" AcceptsReturn="False">12</TextBox>
      <NumericUpDown Grid.Column="0" Grid.Row="1" Value="10" FormatString="N0" ParsingNumberStyle="Integer" Increment="1" />
      <RadioButton Grid.Column="0" Grid.Row="2" GroupName="rButtonGrup" Content="True" IsChecked="True"/>
      <RadioButton Grid.Column="1" Grid.Row="2" GroupName="rButtonGrup" Content="False" IsChecked="False"/>
  </Grid>
</UserControl>
